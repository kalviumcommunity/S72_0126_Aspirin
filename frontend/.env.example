############################################
# üåç Environment Variables Template
# Copy this file to `.env.local` and replace
# placeholder values with your real credentials.
#
# IMPORTANT:
# - `.env.local` is ignored by Git (see `.gitignore`)
# - Never commit real secrets to the repository
############################################

############################################
# üóÑÔ∏è Server-side variables (NOT exposed to client)
# These MUST NOT start with NEXT_PUBLIC_
############################################

# Primary application database (e.g. PostgreSQL / Mongo connection URL)
DATABASE_URL=postgres://username:password@localhost:5432/local_train_db

# Optional: backend API base URL (if you run a separate backend service)
BACKEND_API_BASE_URL=http://localhost:4000

# Firebase / auth secrets (server-side usage only)
FIREBASE_ADMIN_PROJECT_ID=your-firebase-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=service-account@example.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----

############################################
# üåê Client-safe variables
# These ARE exposed to the browser and MUST
# start with NEXT_PUBLIC_
############################################

# Base URL for API requests from the Next.js frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api

# Public Firebase configuration used by the frontend SDK
NEXT_PUBLIC_FIREBASE_API_KEY=your-public-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:abcdef123456

############################################
# üß™ Environment metadata (optional)
############################################

# One of: development | staging | production
NEXT_PUBLIC_APP_ENV=development
